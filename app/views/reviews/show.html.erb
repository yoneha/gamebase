<div class="row">
  <aside class="col-sm-4">
    <div class="card">
      <div class="card-header text-white bg-dark">
        <h3 class="card-title"><%= @review.user.name %></h3>
      </div>
      <div class="card-body">
        <img class="rounded img-fluid" src="<%= gravatar_url(@review.user, { size: 500 }) %>" alt="">
      </div>
    </div>
  </aside>
  <div class="col-sm-8">
    
<div class="container">
  <h2><%= @review.game.name %></h2>
  <p>on <span class="badge badge-dark"><%= @review.game.platform %></span></p>
</div>

    <h2 class="text-center">レビュー詳細</h2>
      <div class="container">
        <div class="row offset-md-1 col-md-10 offset-md-1">
          <p class="col-md-4">オススメ度(0-10)：</p>
          <p class="col-md-8"><%=@review.score%></p>
          <p class="col-md-4">プレイ時間：</p>
          <p class="col-md-8"><%=@review.playtime%></p>
          <p class="col-md-4">レビュータイトル：</p>
          <p class="col-md-8"><%=@review.title%></p>
          <p class="col-md-4">レビュー詳細：</p>
          <p class="col-md-8"><%=@review.content%></p>
          
          <% if current_user == @review.user %>
            <%= link_to '編集', edit_review_path, class: 'btn btn-info btn-block' %>
            <%= link_to "削除", @review, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-block' %>
          <% end %>
      </div>
    </div>
    
  </div>
</div>

