<% if logged_in? %>
  <div class="row">
    <div class="col-3">
      <div class="card">
        <div class="card-header text-white bg-dark text-center">
          ゲームタイトルの追加
        </div>
        <div class="card-body">
          <aside>
            <%= form_with(model: @game, local: true) do |f| %>
              <div class="form-group">
                <%= f.label :name, 'Game Title' %>
                <%= f.text_field :name, class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.label :platform, 'Platform' %>
                <%= f.text_field :platform, class: 'form-control' %>
              </div>
              <%= f.submit '新規追加', class: 'btn btn-primary btn-block' %>
            <% end %>
          </aside>
        </div>
      </div>
    </div>

    <div class="col-9">
      <%= render 'games/games', games: @games %>
    </div>
  </div>
  
<% else %>

<div class="row">
  <div class="col-5">
    <div class="center jumbotron ">
      <div class="">
        <h1>Gamebase にようこそ</h1>
        <p>Gamebaseはゲームのレビューサイトです。</p>
        <p>ゲームについてオススメ度やプレイ時間等のレビュー投稿・共有ができるサービスです。</p>
        <p>ゲームについての良い点や悪い点について正直な感想を投稿してください。</p>
        <p>あなたの投稿は必ず他の人の役に立つでしょう。</p>
        
        <div class="text-center">
            <%= link_to 'Signup', signup_path, class: 'btn btn-lg btn-primary' %>
        </div>
      </div>
    </div>
  </div>
  
  <div class="offset-2 col-5">
    <div class="center jumbotron">
        <div class="text-center">
          <h1>Log in</h1>
        </div>
        
        <div class="row">
          <div class="offset-1 col-10 offset-1">
        
            <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
        
              <div class="form-group">
                <%= f.label :email, 'Email' %>
                <%= f.email_field :email, class: 'form-control' %>
              </div>
        
              <div class="form-group">
                <%= f.label :password, 'Password' %>
                <%= f.password_field :password, class: 'form-control' %>
              </div>
        
              <%= f.submit 'Log in', class: 'btn btn-primary btn-block' %>
            <% end %>
        
            <p>New user? <%= link_to 'Sign up now!', signup_path %></p>
          </div>
        </div>
    </div>
  </div>
</div>

<% end %>